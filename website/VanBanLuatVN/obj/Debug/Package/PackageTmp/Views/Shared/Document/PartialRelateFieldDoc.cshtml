@using VanBanLuat.Librarys
@model VanBanLuatVN.Models.DocViewModel.RelateFieldDoc
<section id="vanbancunglinhvuc" class="cat-box-section">
    @if (Model.ListDocRelateNewest.HasValue() && Model.ListDocRelate.HasValue())
    {
        <div class="item-col2">
            <div class="title-cat lienquan">
                <h3>Văn bản mới</h3>
            </div>
            <div class="cat-box-content">
                @foreach (var item in Model.ListDocRelateNewest)
                {
                    <div class="item-lis-lienquan">
                        <a href="@item.GetDocUrl()" title="@item.DocName" class="post-title">
                            <i class="iconlienquan"></i>
                            @item.DocName
                        </a>
                    </div>
                }
            </div>
        </div>

        <div class="item-col2">
            <div class="title-cat lienquan">
                <h3>Văn bản liên quan</h3>
            </div>
            <div class="cat-box-content">
                @foreach (var item in Model.ListDocRelate)
                {
                    <div class="item-lis-lienquan">
                        <a href="@item.GetDocUrl()" title="@item.DocName" class="post-title">
                            <i class="iconlienquan"></i>
                            @item.DocName
                        </a>
                    </div>
                }
            </div>
        </div>
    }
    else if (Model.ListDocRelateNewest.HasValue())
    {
        <div class="item-col">
            <div class="title-cat lienquan">
                <h3>Văn bản mới</h3>
            </div>
            <div class="cat-box-content">
                @foreach (var item in Model.ListDocRelateNewest)
                {
                    <div class="item-lis-lienquan">
                        <a href="@item.GetDocUrl()" title="@item.DocName" class="post-title">
                            <i class="iconlienquan"></i>
                            @item.DocName
                        </a>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="item-col">
            <div class="title-cat lienquan">
                <h3>Văn bản liên quan</h3>
            </div>
            <div class="cat-box-content">
                @foreach (var item in Model.ListDocRelate)
                {
                    <div class="item-lis-lienquan">
                        <a href="@item.GetDocUrl()" title="@item.DocName" class="post-title">
                            <i class="iconlienquan"></i>
                            @item.DocName
                        </a>
                    </div>
                }
            </div>
        </div>
    }
</section>