@using VanBanLuat.Librarys
@model VanBanLuat.Models.AccountModel.LoginModel
@using (Ajax.BeginForm("Login", "Account", null, new AjaxOptions
{
    HttpMethod = "Post",
    OnSuccess = "vbluat.ajaxEvents.OnSuccess(data, status, xhr)",
    OnFailure = "vbluat.ajaxEvents.OnFailure"
}, new { @class = "user-form" }))
{
    <div class="form-group">
        <input class="input-text ms1" data-val="true" data-val-required="Tên đăng nhập (*)" name="CustomerName" placeholder="Tên đăng nhập *" type="text" value="">
        @Html.ValidationMessageFor(m => m.CustomerName, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <input class="input-text ms1" data-val="true" data-val-required="Mật khẩu (*)" name="CustomerPass" placeholder="Mật khẩu *" type="password" value="">
        @Html.ValidationMessageFor(m => m.CustomerPass, "", new { @class = "text-danger" })
    </div>
    <div class="form-group font13">
        <div class="pure-checkbox dktk">
            @Html.HiddenFor(m => m.ReturnUrl)
            @Html.CheckBoxFor(m => m.RememberMe)
            <label for="RememberMe">Nhớ mật khẩu</label>
        </div>
        <a class="quenpass" href="@(Constants.ROOT_PATH)quen-mat-khau.html"> Quên mật khẩu</a>
    </div>
    <center class="form-group">
        <button class="btn-login btn-default dangnhap">Đăng nhập</button>
    </center>
    <div class="form-group">
        <img style="max-width: 100%;" src="@Url.Content("~/assets/images/chuyendoi.png")" />
    </div>
    <div class="form-group">
        <a href="#" rel="nofollow" class="facebook-login"><img style="max-width: 100%;" src="@Url.Content("~/assets/images/dangnhap-face.png")" /></a>
    </div>
    <div class="form-group">
        <a href="#" rel="nofollow" class="google-login"><img style="max-width: 100%;" src="@Url.Content("~/assets/images/dangnhap-google.png")" /></a>
    </div>
}