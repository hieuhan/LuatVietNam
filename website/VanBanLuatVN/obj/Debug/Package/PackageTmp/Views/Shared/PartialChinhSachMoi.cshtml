@using VanBanLuat.Librarys
@using VanBanLuat.Models
@using ICSoft.ViewLibV3
@model ICSoft.ViewLibV3.CategoryArticles
@if (Model.lArticle.Count > 0)
{
    <div class="widget">
        <div class="widget-top">
            <h3 class="widget-title wg2"><a href="@Model.mCategory.GetCategoryUrl()" title="@Model.mCategory.CategoryDesc.TrimmedOrDefault(string.Empty)">@Model.mCategory.CategoryDesc.TrimmedOrDefault(string.Empty)</a> </h3>
        </div>
        <div class="widget-container bodertop">
            @foreach (Articles mArticles in Model.lArticle)
            {
                <div class="list-new-wget">
                    <a href="@mArticles.GetArticleUrl()" title="@mArticles.Title" class="thumnal-50"><img class="thumb-full h40" src="@mArticles.GetImageUrl_Mobile()" /></a>
                    <div class="tie-new">
                        <a class="post-title-wget" href="@mArticles.GetArticleUrl()" title="@mArticles.Title">@mArticles.Title</a>
                    </div>
                </div>
            }
        </div>
    </div>
}