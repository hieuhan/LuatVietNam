@using VanBanLuat.Librarys
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model VanBanLuat.Models.AccountModel.ForgotPasswordModel
<div class="breadcrumb">
    <a class="breadcrumb-item" href="@Constants.ROOT_PATH" title="Trang chủ">Trang chủ</a> /
    <span class="breadcrumb-item xanh">Lấy lại mật khẩu</span>
</div>
<div class="title-from">
    <h1 class="title-from-cat">Lấy lại mật khẩu</h1>
    <p style="color:#555;">Hướng dẫn đổi mật khẩu sẽ được gửi vào email của quý khách</p>
</div>

<!-- Bengin content-->
<div class="content-dk">
    <div class="p20px">
        @using (Ajax.BeginForm("ForgotPassword", "Account", null, new AjaxOptions
        {
            HttpMethod = "Post",
            OnBegin = "vbluat.ajaxEvents.OnBegin('Gửi ngay')",
            OnSuccess = "vbluat.ajaxEvents.OnSuccessAlert(data, status, xhr)",
            OnFailure = "vbluat.ajaxEvents.OnFailure"
        }))
        {
            <div class="rows-dk">
                <div class="w300">
                    @Html.TextBoxFor(m => m.ForgotPasswordEmail, new { @class = "input-text ms1 font14", placeholder = "Nhập Email đăng ký tài khoản *" })
                    @Html.ValidationMessageFor(m => m.ForgotPasswordEmail, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="rows-dk">
                <center class="form-group">
                    <button class="btn-default guingay">Gửi ngay</button>
                </center>
            </div>
        }
    </div>
</div>
