@using VanBanLuat.Models
@using Constants = VanBanLuat.Librarys.Constants
@using ICSoft.ViewLibV3
@model NewViewModel
@{
    ViewBag.Title = "BieuMau";
    Layout = "~/Views/Shared/_LayoutNews.cshtml";
}
<div class="breadcrumb">
    <a class="breadcrumb-item" href="@Constants.ROOT_PATH">Trang chủ</a> /
    <span class="breadcrumb-item xanh">Biểu mẫu mới cập nhật</span>
</div>
<!-- Bengin content-->
<div class="content-left">

    <div class="banner-phaply">
        <img class="thumb-full" src="@Url.Content("~/assets/images/bannerphaply.png")" />
    </div>

    <!-- Bengin section-box-->
    @if (Model.lCategoryArticles[0].lArticle.Count > 0)
    {
        int row = Model.lCategoryArticles[0].lArticle.Count % 2 == 0 ? Model.lCategoryArticles[0].lArticle.Count / 2 : Model.lCategoryArticles[0].lArticle.Count / 2 + 1;
        <section class="cat-box-section">
            <div class="title">
                <h2 class="td-phaply">@Model.lCategoryArticles[0].mCategory.CategoryDesc</h2>
            </div>
            <div class="cat-box-content">
                <div class="item-col2">
                    @for (int i = 0; i < row; i++)
                    {
                        <div class="list-new">
                            <img class="thumb-bieumau" alt="@Model.lCategoryArticles[0].lArticle[i].Title" src="@Model.lCategoryArticles[0].lArticle[i].GetImageUrl_Icon()" style="width:36px; height:40px;" />
                            <div class="pdbieumau">
                                <a class="post-title new" title="@Model.lCategoryArticles[0].lArticle[i].Title" href="@Model.lCategoryArticles[0].lArticle[i].GetArticleUrl()">@Model.lCategoryArticles[0].lArticle[i].Title</a>
                            </div>
                        </div>
                    }
                </div>
                <div class="item-col2">
                    @for (int i = row; i < Model.lCategoryArticles[0].lArticle.Count; i++)
                    {
                        <div class="list-new">
                            <img class="thumb-bieumau" alt="@Model.lCategoryArticles[0].lArticle[i].Title" src="@Model.lCategoryArticles[0].lArticle[i].GetImageUrl_Icon()" style="width:36px; height:40px;" />
                            <div class="pdbieumau">
                                <a class="post-title new" title="@Model.lCategoryArticles[0].lArticle[i].Title" href="@Model.lCategoryArticles[0].lArticle[i].GetArticleUrl()">@Model.lCategoryArticles[0].lArticle[i].Title</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </section>
    }
    <!-- End section-box-->
    <!-- Bengin section-box-->
    @if (Model.lCategoryArticles[1].lArticle.Count > 0)
    {
        int row = Model.lCategoryArticles[1].lArticle.Count % 2 == 0 ? Model.lCategoryArticles[1].lArticle.Count / 2 : Model.lCategoryArticles[1].lArticle.Count / 2 + 1;
        <section class="cat-box-section vien">
            @if (Model.lCategories.Count > 0)
            {

                <div class="title">
                    <h2 class="td-phaply">Biểu mẫu cần biết</h2>
                    <div class="rightbieumau">
                        <form action="@Request.RawUrl" method="get" >
                            <select class="text-s2 ply" id="cateId" name="cateId" onchange="this.form.submit()">
                                <option value="0" selected>Loại hình doanh nghiệp</option>
                                @foreach (Categories mCategories in Model.lCategories)
                                {
                                    <option style="line-height:60px !important;" @(Model.CategoryId == mCategories.CategoryId ? "selected" : "") value="@mCategories.CategoryId">@mCategories.CategoryDesc</option>
                                }
                            </select>
                        </form>
                    </div>
                </div>
            }
            <div class="cat-box-content" id="listbieumau">
                <div class="item-col2">
                    @for (int i = 0; i < row; i++)
                    {
                        <div class="list-new">
                            <img class="thumb-bieumau" alt="@Model.lCategoryArticles[1].lArticle[i].Title" src="@Model.lCategoryArticles[1].lArticle[i].GetImageUrl_Icon()" style="width:36px; height:40px;" />
                            <div class="pdbieumau">
                                <a class="post-title new" title="@Model.lCategoryArticles[1].lArticle[i].Title" href="@Model.lCategoryArticles[1].lArticle[i].GetArticleUrl()">@Model.lCategoryArticles[1].lArticle[i].Title</a>
                            </div>
                        </div>
                    }
                </div>
                <div class="item-col2">
                    @for (int i = row; i < Model.lCategoryArticles[1].lArticle.Count; i++)
                    {
                        <div class="list-new">
                            <img class="thumb-bieumau" alt="@Model.lCategoryArticles[1].lArticle[i].Title" src="@Model.lCategoryArticles[1].lArticle[i].GetImageUrl_Icon()" style="width:36px; height:40px;" />
                            <div class="pdbieumau">
                                <a class="post-title new" title="@Model.lCategoryArticles[1].lArticle[i].Title" href="@Model.lCategoryArticles[1].lArticle[i].GetArticleUrl()">@Model.lCategoryArticles[1].lArticle[i].Title</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </section>
    }
    else
    {
        <section class="cat-box-section vien">
            @if (Model.lCategories.Count > 0)
            {

                <div class="title">
                    <h2 class="td-phaply">Biểu mẫu cần biết</h2>
                    <div class="rightbieumau">
                        <form action="@Request.RawUrl" method="get" >
                            <select class="text-s2 ply" id="cateId" name="cateId" onchange="this.form.submit()">
                                <option value="0" selected>Loại hình doanh nghiệp</option>
                                @foreach (Categories mCategories in Model.lCategories)
                                {
                                    <option style="line-height:60px !important;" @(Model.CategoryId == mCategories.CategoryId ? "selected" : "") value="@mCategories.CategoryId">@mCategories.CategoryDesc</option>
                                }
                            </select>
                        </form>
                    </div>
                </div>
            <div class ="cat-box-content">
                <div class="new-list-other">
                    <p class="post-title vbl bold">Nội dung đang được cập nhật.</p>
                </div>
</div>
            }
            </section>
    }
    <!-- End section-box-->
    <!-- End content-->

</div>
<!-- Bengin aside-270-->
<aside class="sidebar-270">
    <!-- Bengin widget-->
    @{ Html.RenderAction("PartialGetListCateIdByParentId", "Shared", new { ParentId = Constants.CateId_LoaiHinhDoanhNghiep, viewName = "PartialLoaiDoanhNghiep" });}
    <!-- End widget-->
    <!-- Bengin widget-->
    <div class="widget">
        <div class="ads">
            <button class="yeucauvanbanbtn" title="Gửi yêu cầu văn bản" data-action="yeu-cau-van-ban.html" data-name="Gửi yêu cầu văn bản">
                <img class="imgycvb" src="@Url.Content("~/assets/images/icon-yeucauvanban.png")" /> Yêu cầu văn bản
            </button>
        </div>
    </div>
    <!-- End widget-->
    <!-- Bengin widget-->
    @{ Html.RenderAction("PartialArticlesGetByCategoryId", "Shared", new { categoryId = Constants.CateId_ThongBaoVBMoi, rowAmount = Constants.RowAmount5, viewName = "PartialChinhSachMoi" });}
    <!-- End widget-->
    <!-- Bengin widget-->
    @{ Html.RenderAction("PartialDocumentsByGetByDisplayTypeId", "Shared", new { displayTypeId = Constants.DisplayTypeId_LuatDNXemNhieu, boxTitle = "Luật doanh nghiệp xem nhiều", rowAmount = Constants.RowAmount5, viewName = "PartialDocumentsOfInterest" });}
    <!-- End widget-->
</aside>
