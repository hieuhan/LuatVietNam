@using VanBanLuat.Librarys
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model VanBanLuat.Models.AccountModel.LoginModel
<div class="breadcrumb">
    <a class="breadcrumb-item" href="@Constants.ROOT_PATH" title="Trang chủ">Trang chủ</a> /
    <span class="breadcrumb-item xanh">Đăng nhập tài khoản</span>
</div>
<div class="title-from">
    <h1 class="title-from-cat">Đăng nhập</h1>
    <p style="color:#555;">Quý khách có thể chọn hình thức đăng nhập bằng <strong style="color: #3a559f;">Facebook</strong> hoặc <strong style="color: #c02127;">G+</strong></p>
</div>

<!-- Bengin content-->
<div class="content-dk">
    @using (Ajax.BeginForm("Login", "Account", null, new AjaxOptions
    {
        HttpMethod = "Post",
        OnBegin = "vbluat.ajaxEvents.OnBegin('Đăng nhập')",
        OnSuccess = "vbluat.ajaxEvents.OnSuccess(data, status, xhr)",
        OnFailure = "vbluat.ajaxEvents.OnFailure"
    }))
    {
        <div class="p20px">
            <div class="rows-dk">
                <div class="w300">
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.CustomerName, new { @class = "input-text ms1 font14", placeholder = "Tên đăng nhập *", autocapitalize="off", autocorrect="off" })
                        @Html.ValidationMessageFor(m => m.CustomerName, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.CustomerPass, new { @class = "input-text ms1 font14", type = "password", placeholder = "Mật khẩu *", autocapitalize="off", autocorrect="off" })
                        @Html.ValidationMessageFor(m => m.CustomerPass, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <div class="pure-checkbox dktk">
                            @Html.CheckBoxFor(m => m.RememberMe, new { id="RememberMeLogin",@class = "none" })
                            <label for="RememberMeLogin">Nhớ mật khẩu</label>
                            @Html.HiddenFor(m => m.ReturnUrl)
                        </div>
                        <a class="quenpass" href="@(Constants.ROOT_PATH)quen-mat-khau.html" title="Quên mật khẩu"> Quên mật khẩu</a>
                    </div>
                    <div class="form-group">
                        <img style="max-width: 100%;" src="@Url.Content("~/assets/images/chuyendoi.png")" />
                    </div>
                    <div class="form-group">
                        <a href="#" rel="nofollow" class="facebook-login"><img style="max-width: 100%;" src="@Url.Content("~/assets/images/dangnhap-face.png")" /></a>
                    </div>
                    <div class="form-group">
                        <a href="#" rel="nofollow" class="google-login"><img style="max-width: 100%;" src="@Url.Content("~/assets/images/dangnhap-google.png")" /></a>
                    </div>
                </div>
            </div>

            <div class="rows-dk">
                <center class="form-group">
                    <button class="btn-form btn-default guingay">Đăng nhập</button>
                </center>
            </div>
        </div>
    }
</div>
