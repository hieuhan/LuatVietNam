@model LawsVN.Models.Account.DocSendMailModel
<div class="from-thong-bao-3">
        @using (Ajax.BeginForm("DocSendMail", "Ajax", null, new AjaxOptions()
        {
            HttpMethod = "Post",
            OnBegin = "lawsVn.ajaxEvents.OnBegin",
            OnComplete = "lawsVn.ajaxEvents.OnComplete",
            OnSuccess = "lawsVn.ajaxEvents.OnSuccess"
        }, new { id = "DocSendMailForm" }))
        {
            @Html.AntiForgeryToken()
            <div class="rows-thongbao">
                <div class="inputleft">
                    @Html.TextBoxFor(m => m.Email, new { @class = "text-tbao ", placeholder = "Nhập email nhận link bài viết." })
                    @Html.ValidationMessageFor(m => m.Email, "", new {@class = "text-danger"})
                </div>
                <div class="btn-right btn-right-mobi">
                    <button class="btn-thongbao1 xn" style="height: 32px"> Gửi</button>
                </div>
            </div>
            @Html.HiddenFor(m=>m.DocUrl)
        }
</div>
