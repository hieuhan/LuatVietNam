    </div>
    @if (!string.IsNullOrEmpty(Model.mDocsViewDetail.mDocsView.DocSummary))
    {
        <div class="content-info">
            @Html.Raw(Model.mDocsViewDetail.mDocsView.DocSummary)
        </div>
    }
    else
    {
        <div class="thong-bao-2">
            <div class="rows item5"></div>
