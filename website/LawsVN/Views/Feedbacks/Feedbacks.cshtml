@using LawsVN.Models
@using LawsVN.App_GlobalResources
@using ICSoft.CMSLib
@model FeedbacksViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content">

    <div class="breadcrumb">
        <a href="@CmsConstants.ROOT_PATH" class="breadcrumb-item" title="@Resource.HomePage"><span class="icon-home"></span>@Resource.HomePage </a> »
        <span class="breadcrumb-item colorrumb">Liên hệ</span>
    </div>

    <div class="cat-box-content">
        <div class="download-post">
            <div class="col-xs-2 md2">
                <div class="cat-title">
                    <div class="cat-box-title vien"><h1 class="cat-box-title">Liên hệ với LuatVietnam.vn</h1></div>
                </div>
                <div class="form-inline">
                    @using (Ajax.BeginForm("FeedBacks", "FeedBacks", new AjaxOptions
                        {
                            HttpMethod = "POST",
                            OnBegin = "lawsVn.ajaxEvents.OnBegin",
                            OnComplete = "lawsVn.ajaxEvents.OnComplete",
                            OnSuccess = "lawsVn.ajaxEvents.LoginOnSuccess"
                        }))
                    {
                         @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label class="col-sm-1">Họ và tên: </label>
                            <div class="col-sm-2">
                                @Html.TextBoxFor(m => m.FullName, new { @class = "form-control-input-feedbacks" })
                                @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-1">Điện thoại: </label>
                            <div class="col-sm-2">
                                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control-input-feedbacks" })
                                @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
                            </div>

                        </div>
                        <div class="form-group">
                            <label class="col-sm-1">Email: <span class="redcolor">*</span></label>
                            <div class="col-sm-2">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control-input-feedbacks" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-1">Nội dung: <span class="redcolor">*</span></label>
                            @Html.TextAreaFor(m => m.Comment, new { @class = "form-control-input textarea-control" })
                            @Html.ValidationMessageFor(m => m.Comment, "", new { @class = "text-danger", style = "padding-left: 139px;" })
                        </div>
                        <div class="form-group">
                            <div class="col-sm-1">
                                Mã bảo mật: 
                            </div>
                            <div class="ma-code2" style="margin-left: 0">
                                @Html.TextBoxFor(m => m.CaptchaCode, new { @class = "form-control-input", placeholder = "Nhập mã bảo mật", style = "color: #888888; width: 150px; font-style: italic;" })
                            </div>
                            <div class="ma-code2" style="width:30%;">
                                <img alt="CaptchaImg" class="captcha" id="Feedbacks" style="float: left;" src="@Url.Action("CaptchaImage", "Home", new { id = Guid.NewGuid(), prefix = "Feedbacks" })">
                                <a class="ma-code2 getcaptcha" data-id="Feedbacks" href="#" title="Nhận mã bảo mật mới" data-prefix="ForgotPassword">
                                    <img class="imgrset" alt="" src="@Url.Content("~/assets/images/rset.png")"/>
                                </a><br />
                                @Html.ValidationMessageFor(m => m.CaptchaCode, "", new { @class = "text-danger", style = " float: left;width: 60%;" })
                            </div>
                            <button class="btn-default contact">Gửi</button>
                        </div> 
                    }
                </div>
            </div>

            <div class="col-xs-2 md2">
                <div class="cat-title">
                    <div class="cat-box-title vien">Địa chỉ văn phòng</div>
                </div>
                <div class="rows contact">
                    <p><strong style="color: #222222;">CÔNG TY CÔ PHẦN TRUYỀN THÔNG QUỐC TẾ INCOM </strong> </p>
                    <p><strong style="color: #222222;">Điện thoại:</strong> (024) 37833688     |  <strong style="color: #222222;">  Fax:</strong> (024) 37833699</p>
                    <p><strong style="color: #222222;"> Hotline:</strong> 1900561589     |    <strong style="color: #222222;"> Email: </strong>lawdata@luatvietnam.vn</p>
                    <p><strong style="color: #222222;">Địa chỉ:</strong> Tầng 3, Tòa nhà IC, 82 phố Duy Tân, Cầu Giấy, Hà Nội.</p>
                </div>
                <div class="rows item8">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m16!1m12!1m3!1d3724.0380797077732!2d105.78141641438692!3d21.031162285997137!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!2m1!1zVOG6p25nIDMsIFTDsmEgbmjDoCBJQywgODIgcGjhu5EgRHV5IFTDom4sIEPhuqd1IEdp4bqleSwgSMOgIE7hu5lpLg!5e0!3m2!1svi!2s!4v1504066742919" width="100%" height="321" frameborder="0" style="border:0" allowfullscreen></iframe>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="cat-box partner">
    <div class="cat-box-content">
        <div id="partnerLink" class="col-xs-2 md2">
            @Html.Partial("PartialPartnerLink")
        </div>
        <div class="col-xs-2 md2">
            @{Html.RenderAction("PartialSharedCorner", "Shared");}
        </div>
    </div>
</div>

    
   

