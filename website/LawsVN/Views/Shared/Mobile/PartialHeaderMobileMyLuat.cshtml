@using ICSoft.CMSLib
@using LawsVN.Library
@using ICSoft.CMSViewLib
@model LawsVN.Models.HeaderMobileModel
<header class="header">
    <div class="menu-icon-sammo">
        <button class="btn-nav" data-toggle-target="#leftMenu"><img src="@Url.Content("~/assets/Mobile/Images/imenu.png")" /></button>
        <div class="w3-sidebar w3-bar-block w3-card w3-animate-left" style="display:none" id="leftMenu">
            <button data-toggle-target="#leftMenu" class="closeleft"><img src="@Url.Content("~/assets/Mobile/Images/close.png")" /></button>
            <nav class="nav-main">
               @{Html.RenderAction("PartialFullSearchMenuMobile", "Shared");}
                @if (Model.ListMenuItemsView.HasValue())
                {
                    foreach (MenuItemsView menuItem in Model.ListMenuItemsView)
                    {
                        <div class="rows-nav">
                            <a href="@menuItem.GetUrl()" class="nav-item">@menuItem.ItemName</a>
                        </div>
                    }
                }
            </nav>
        </div>
    </div>


    <div class="logo">
        <a href="@(CmsConstants.ROOT_PATH)giao-dien-ca-nhan.html"><img style="height: 40px" src="@Url.Content("~/assets/Mobile/Images/logo-myluatvietnam.png")" /></a>
    </div>
    <!-- dropdown-->
    <div class="btn-add">
        <button class="btn-right2 select-customer-province"><img src="@Url.Content("~/assets/Mobile/Images/ic_person_pin_circle_24px.png")" /></button>
    </div>
    <!-- End-->
    <!-- dropdown-->
    <div class="user">
        @if (Request.IsAuthenticated)
        {
            { Html.RenderAction("PartialWidgetUserHeaderMobile", "Shared", new { getCountPaymentTransactionSuccess = Model.GetCountPaymentTransactionSuccess, getCountThongBaoHieuLuc = Model.GetCountThongBaoHieuLuc }); }
        }
        else
        {
            { Html.RenderAction("PartialLogin", "Shared"); }
            <button class="btn-right" data-toggle-target="#loginForm">
                <img src="@Url.Content("~/assets/Mobile/Images/hoten.png")" />
            </button>
        }
    </div>
    <!-- End-->

</header>
