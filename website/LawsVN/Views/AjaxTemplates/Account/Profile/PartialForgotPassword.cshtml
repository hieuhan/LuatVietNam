@model LawsVN.Models.Account.ForgotPasswordModel
<div class="from-thong-bao-3">
    <div class="content-thongbao" style="width: 89.6%;">
        <div class="rows-thongbao center" style=" font-size: 16px;font-weight: bold; text-transform: uppercase;">
            Quên mật khẩu
        </div>
        <div class="rows-thongbao center" style="font-size: 13px; font-style: italic; line-height: 24px;">
            <span>Điền tên tài khoản để lấy lại mật khẩu.</span>
        </div>
    @using (Ajax.BeginForm("ForgotPassword", "Account", null, new AjaxOptions()
    {
        HttpMethod = "Post",
        OnBegin = "lawsVn.ajaxEvents.OnBegin",
        OnComplete = "lawsVn.ajaxEvents.OnComplete",
        OnSuccess = "lawsVn.ajaxEvents.OnSuccess"
    }, new {id = "ForgotPasswordForm"}))
    {
        @Html.AntiForgeryToken()
        <div class="rows-thongbao">
            @Html.TextBoxFor(m => m.CustomerName, new { @class = "text-tbao" })
            @Html.ValidationMessageFor(m => m.CustomerName, "", new { @class = "text-danger" })
        </div>
        <div class="rows-thongbao">
                <div class="colx3" style="line-height: 30px; margin-right: 10px;">Mã an toàn: </div>
                <div class="colx3">
                    <img class="captcha" alt="captcha" id="ForgotPassword" src="@Url.Action("CaptchaImage", "Home", new {id = Guid.NewGuid(), prefix = "ForgotPassword"})">
                </div>
                <div class="colx3" style="margin-right: 10px;">
                    @Html.TextBoxFor(m => m.ForgotPasswordCaptchaCode, new {@class = "form-control-input internal-content"})
                    @Html.ValidationMessageFor(m => m.ForgotPasswordCaptchaCode, "", new {@class = "text-danger"})
                </div>
                <a class="ma-code2 getcaptcha" data-id="ForgotPassword" href="#" title="Nhận mã bảo mật mới" data-prefix="ForgotPassword">
                    <img class="imgrset" alt="" src="@Url.Content("~/assets/images/rset.png")"/>
                </a>
        </div>
        <div class="rows-thongbao center">
            <button class="btn-thongbao1 xn"> Gửi</button>
            <button class="btn-thongbao1 btn-close" style="font-size: 12px;height: 32px;"> Đóng </button>
        </div>
    }
    </div>
</div>

