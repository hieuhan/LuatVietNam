@model LawsVN.Models.Account.SendQuestionsModel
<div class="cat-box-content">

    @using (Ajax.BeginForm("SendQuestions", "Ajax", null, new AjaxOptions()
    {
        HttpMethod = "Post",
        OnBegin = "lawsVn.ajaxEvents.OnBegin",
        OnComplete = "lawsVn.ajaxEvents.OnComplete",
        OnSuccess = "lawsVn.ajaxEvents.LoginOnSuccess"
    }, new { id = "SendQuestionForm" }))
    {
        @Html.AntiForgeryToken()
        <div class="rows-thongbao " style="font-size: 16px; font-weight: bold; text-transform: uppercase; margin-bottom: 15px;">
            <img class="imgcauhoi" src="@Url.Content("~/assets/images/hoi-dap.png")"/>
            <span style="float: left; line-height: 50px;">Gửi câu hỏi</span>
        </div>
        <div class="form-group">
            <label class="col-sm-1">Họ và tên: </label>
            <div class="col-sm-2 right tax-invoice2 " style="float: left">
                @Html.TextBoxFor(m => m.FullName, new { @class = "form-control-input" })
                @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="colxs2td">
                <label class="col-sm-1">Email: <span class="redcolor">*</span> </label>
                <div class="col-sm-2 right tax-invoice2 " style="float: left">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control-input" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger", placeholder = "Nơi đăng ký kinh doanh" })
                </div>
            </div>
            <div class="colxs2td">
                <label class="col-sm-1" style="text-align: right"><span style="padding-right: 20px;">Điện thoại:</span> </label>
                <div class="col-sm-2 right tax-invoice2 " style="float: left">
                    @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control-input" })
                    @Html.ValidationMessageFor(m => m.Mobile, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
          
        <div class="form-group">
            <label class="col-sm-1">Nội dung câu hỏi: <span class="redcolor">*</span></label>
            <div class="col-sm-2 full">
                @Html.TextAreaFor(m => m.Questions, new { @class = "form-control-input textarea-control internal-content full" })
                @Html.ValidationMessageFor(m => m.Questions, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="rows">
            <div class="btn-right">
                <button class="btn-thongbao1 mau1 btn-reset" style="font-size: 13px; height: 32px;">Nhập lại </button>
                <button class="btn-thongbao1 mau2" style="font-size: 13px; height: 32px; margin-right: 0;">Gửi </button>
            </div>
        </div>
    }
</div>
