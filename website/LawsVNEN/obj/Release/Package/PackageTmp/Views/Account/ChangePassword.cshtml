@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using ICSoft.CMSLib
@using LawsVNEN.App_GlobalResources
@model LawsVNEN.Models.Account.ChangePasswordModel
<div class="content-center-pages searchblog">
    <div class="breadcrumb"> 
    <a href="@CmsConstants.ROOT_PATH" class="breadcrumb-item">
        <span class="icon-home"></span>@Resource.HomePage</a> » 
    <span class="breadcrumb-item colorrumb">@Resource.ChangePassword</span> </div>

    <div class="cat-box-content">
        <div class="forgetpassword">
            <div class="form-forget">
                <div class="rows item6" style="text-align: center"><span class="tie-for"><img class="Forget-password_03" src="@Url.Content("~/assets/images/Forget-password_03.png")" />@Resource.ChangePassword</span></div>
                 @using (Ajax.BeginForm("ChangePassword", "Account", null, new AjaxOptions
                {
                    HttpMethod = "Post",
                    OnBegin = "lawsVn.ajaxEvents.OnBegin",
                    OnComplete = "lawsVn.ajaxEvents.OnComplete",
                    OnSuccess = "lawsVn.ajaxEvents.LoginOnSuccess"
                }, new { id = "ChangePasswordForm" }))
                {
                 @Html.AntiForgeryToken()
                <div class="rows item6">
                    <label class="col-sm-1 enname">@Resource.UserName:</label>
                    <div class="col-sm-2 enname ">
                       @Model.Name
                    </div>
                </div>
                <div class="form-group en">
                    <label class="col-sm-1 en">@Resource.CurrentPassword: <span class="redcolor">*</span> </label>
                    <div class="col-sm-2 en ">
                        @Html.TextBoxFor(m => m.CurrentPassword, new { @class = "form-control-input", type = "password" })
                        @Html.ValidationMessageFor(m => m.CurrentPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group en">
                    <label class="col-sm-1 en">@Resource.NewPassword: <span class="redcolor">*</span> </label>
                    <div class="col-sm-2 en ">
                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control-input", type = "password" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group en">
                    <label class="col-sm-1 en">@Resource.RetypeNewPassword: <span class="redcolor">*</span> </label>
                    <div class="col-sm-2 en ">
                        @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control-input", type = "password" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
                     @Html.HiddenFor(m=> m.Id)
                    <span hidden> @Model.Id</span>
                <div class="rows">
                    <button class="btn-nhap-lai dk2" onclick="javascript:window.location.href='@CmsConstants.ROOT_PATH';return false;">@Resource.Cancel</button>
                    <button class="btn-dang-ky dk2">@Resource.Save</button>
                </div>
                }
            </div>
        </div>
    </div>
</div>

